html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='description', content='Some description')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
	body
		div.container
			h3 Lab 7: MySQL & Node.js 
			p  
			hr
			p
				a.btn.btn-primary(href='/', style="margin-right:10px") Home
				a.btn.btn-primary(href='/takes/add', style="margin-right:10px") Add New Enrollment
			form(action='' method="GET")
				.form-group
					label(for="post_title") Select by Student ID
					input#post_id.form-control(type='text' name='id' placeholder='SEARCH')
					br
					input.btn.btn-primary(type="submit" value="SEARCH") 
			table.table.table-bordered
				tr
					th.text-center(width='5%') Student ID
					th.text-left(width='35%') Name
					th.text-left(width='5%') Course ID
					th.text-left(width='15%') Course Title
					th.text-left(width='3%') Section
					th.text-left(width='3%') Semester
					th.text-left(width='3%') Year
					th.text-left(width='3%') Grade
					th.text-left(width='5%') Edit
					th.text-left(width='5%') Delete
				for s in student 
					tr
						td=s.student_id
						td=s.name
						td=s.cid
						td=s.title
						td=s.sect_id
						td=s.semester
						td=s.cyear
						td=s.grade
						td
							a.btn.btn-warning(href='takes/edit/' + [s.student_id, s.cid,s.sect_id,s.semester,s.cyear].join('/')) Edit
						td
							a.btn.btn-danger(href='takes/delete/' +[s.student_id, s.cid,s.sect_id,s.semester,s.cyear].join('/')) Delete

